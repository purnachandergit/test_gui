{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2016",
            "dom",
            "dom.iterable"
        ],
        "downlevelIteration": true
    },
    "exclude": [
        "node_modules",
        "node_modules/@types",
        "electron",
        "dist",
        "spectron"
    ]
}
